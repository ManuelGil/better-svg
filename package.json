{
  "name": "better-svg",
  "displayName": "Better SVG",
  "description": "SVG editor with live preview and optimization",
  "version": "0.0.1",
  "publisher": "midudev",
  "author": {
    "name": "Miguel Ángel Durán"
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/midudev/better-svg"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:xml"
  ],
  "contributes": {
    "views": {
      "explorer": [
        {
          "type": "webview",
          "id": "betterSvg.preview",
          "name": "SVG Preview",
          "icon": "$(eye)",
          "when": "betterSvg.hasSvgOpen"
        }
      ]
    },
    "commands": [
      {
        "command": "betterSvg.optimize",
        "title": "Optimize SVG",
        "icon": "$(zap)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "betterSvg.optimize",
          "when": "resourceExtname == .svg",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Better SVG",
      "properties": {
        "betterSvg.autoReveal": {
          "type": "boolean",
          "default": true,
          "description": "Automatically reveal and expand the SVG Preview panel in Explorer when opening SVG files"
        },
        "betterSvg.autoCollapse": {
          "type": "boolean",
          "default": true,
          "description": "Automatically collapse the SVG Preview panel in Explorer when closing all SVG files"
        },
        "betterSvg.defaultColor": {
          "type": "string",
          "default": "#ffffff",
          "pattern": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
          "description": "Default color for currentColor in the SVG preview (hex format, e.g., #ffffff)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && npm run copy-webview",
    "watch": "tsc -watch -p ./ & npm run watch-webview",
    "copy-webview": "mkdir -p out/webview && cp src/webview/*.html src/webview/*.css src/webview/*.js out/webview/",
    "watch-webview": "node -e \"require('fs').watch('src/webview', () => require('child_process').exec('npm run copy-webview'))\"",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "24.x",
    "@types/vscode": "1.105.0",
    "@typescript-eslint/eslint-plugin": "8.46.1",
    "@typescript-eslint/parser": "8.46.1",
    "eslint": "9.38.0",
    "neostandard": "0.12.2",
    "typescript": "5.9.3"
  },
  "dependencies": {
    "svgo": "4.0.0"
  }
}
